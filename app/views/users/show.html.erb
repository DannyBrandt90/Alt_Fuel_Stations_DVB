<h1>Welcome, <%= @user.name %>!</h1>
<h4> You have <%= @stations.count %> stations in your zip. <%= @user.updates?%></h4>
<%= link_to "Show all #{@user.name}'s stations", "/users/#{@user.id}/stations" %>
<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Access</th>
    <th>Link</th>
    <th>Add Station</th>
  </tr>
  <% @stations.each do |s|%>
    <tr>
        <td>
            <%= s.name %>
        </td>
        <td>
            <%= "#{s.address}, #{s.city}, #{s.state}, #{s.zip}" %>
        </td>
        <td>
            <%= s.access %>
        </td>
        <td>
           <%= link_to "Show #{s.name}", "/stations/#{s.id}"%>
        </td>
        <td>
        <!---show add only if user doesn't already have station saved--->
           <%= link_to "Add", "/users/#{current_user.id}/stations/#{s.id}"%>
        </td>
    </tr>
  <% end %>
</table>