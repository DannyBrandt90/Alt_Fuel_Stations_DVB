<!DOCTYPE html>
<html>
  <head>
    <title>AltFuelStationsDvb</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">

            <% if user_signed_in? %>
              <a class="navbar-brand" href="<%= user_path(current_user) %>"/>Home</a>
              <a class="navbar-brand" href="<%= settings_path(current_user) %>"/>Settings</a>
              <a class="navbar-brand" href="<%= destroy_user_session_path %>"/>Log Out</a>
            <% else %>
              <a class="navbar-brand" href="<%= new_user_session_path %>">Login</a>
              <a class="navbar-brand" href="<%= new_user_registration_path %>">Sign Up</a>
            <% end %>
            <div class="navbar-brand" id="nav-search">
              <form class="form-inline" action= <%= search_path(current_user) %>>
                <input class="form-control" type="search" name="zip" placeholder="Zip Code">
                <button class="btn" type="submit">Search</button>
              </form>
            </div>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  <!-- content -->
  <div id="flash_message">
   <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div>
    <% end %>
  </div>

    <%= yield %>

  </body>
</html>
