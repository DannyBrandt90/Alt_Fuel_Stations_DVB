<h1> Search </h1>
<%= form_tag '/stations/search', method: :get do |f|%>
    <%= label_tag "Zip" %><br>
    <%= text_field_tag :zip %><br>
    <%= submit_tag "Search"%>
<%end%>
<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Access</th>
    <th>Link</th>
    <th>Add Station</th>
  </tr>
  <% if @stations.any? %>
    <% @stations.each do |s| %>
      <tr>
          <td>
              <%= s.name %>
          </td>
          <td>
              <%= "#{s.address}, #{s.city}, #{s.state}, #{s.zip}" %>
          </td>
          <td>
              <%= s.access %>
          </td>
          <td>
             <%= link_to "Show #{s.name}", "/stations/#{s.id}"%>
          </td>
          <td>
          <!---show add only if user doesn't already have station saved--->
             <%= link_to "Add", "/users/#{current_user.id}/stations/#{s.id}"%>
          </td>
      </tr>
    <% end %>
  <% end %>
</table>