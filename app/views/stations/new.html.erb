<h1>Create a New Residential Station</h1>

<%= render "errors" %>

<div id="card_container">

    <%= form_for :station, url: user_stations_path(current_user) do |f|%>

        <%= f.label "Name *" %><br>
        <%= f.text_field :name, value: current_user.name, required: true %><br>

        <%= f.label :city %><br>
        <%= f.text_field :city, value: current_user.city %><br><br>

        <%= f.label :state %><br>
         <%= f.select :state, options_for_select(state_selection, current_user.state), {} %><br><br>

        <%= f.label "Zip *" %><br>
        <%= f.text_field :zip, placeholder: "5-digit zip", value: current_user.zip, required: true %><br><br>

        <%= f.label "Address *" %><br>
        <%= f.text_area :address, placeholder:"1234 S James St", required: true %><br><br>

        <%= f.label "Outlet Type *" %><br>
        <%= f.select :outlets, options_for_select(outlet_selection), {}, required: true %><br><br>

    <!--value added to prevent default N/A as placeholder-->
        <%= f.label :phone %><br>
        <%= f.text_field :phone, value: "", placeholder: "xxx-xxx-xxxx", required: true %><br><br>
    <div class='buttons'>
        <%= f.submit "Create Residential Station", class: 'btn btn-primary'%>
    </div>
    <%end%>
</div>