<div id="card_container">

   <h3><%= @station.name %></h3><br>
   <p>Address: <%= @station.address %></p>
   <p>City: <%= @station.city %></p>
   <p>State: <%= @station.state %></p>
   <p>Zip: <%= @station.zip %></p>
   <p>Status: <%= @station.status %></p><br>
   <p>Phone Number: <%= @station.phone %></p>

   <p>Notes:</p>
   <ul id="notes">
   <% @station.notes.each do |n| %>
        <li>
            <p> <%= n.content %>  
            <% if n.user ==  current_user %>
               <%= link_to "remove", "/notes/#{n.id}/delete" %>
               <% else %>
               <%= "created by: #{n.user.name}" %>
            <% end %>
            </p>
        </li>
   <% end %>
   </ul>
   
   <%= form_tag('/notes') %>
   <%= hidden_field :note, :station_id, :value => @station.id %>
   <%= text_area_tag :content %>
   <%= submit_tag "Add Note" %>
   
   <% if @station.users.find_by(id: current_user.id) %>
      <%= link_to "Remove Station", "/users/#{current_user.id}/stations/#{@station.id}/delete", :style => 'color:red;' %>
   <% end %>
   
</div>