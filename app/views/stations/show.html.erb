<div id="card_container">
   <p>Name: <%= @station.name %></p>
   <p>Address: <%= @station.address %></p>
   <p>City: <%= @station.city %></p>
   <p>State: <%= @station.state %></p>
   <p>Zip: <%= @station.zip %></p>
   <p>Status: <%= @station.status %></p><br>

   <p>Notes:</p>
   <ul id="notes">
   <% @station.notes.each do |n| %>
        <li>
            <p> <%= n.content %>  <%= link_to "remove", "/notes/#{n.id}/delete"%> </p>
        </li>
   <% end %>
   </ul>
   
 <%= form_tag('/notes') %>
 <%= hidden_field :note, :station_id, :value => @station.id %>
 <%= text_area_tag :content %>
 <%= submit_tag "Add Note" %>

   <% if admin?%>
        <%= link_to "Delete", "/stations/#{@station.id}/delete", :style => 'color:red;' %>
   <% end %>
</div>